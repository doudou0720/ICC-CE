                            <TextBlock x:Name="NibModeBoundsWidthText" Text="5" VerticalAlignment="Center" FontSize="14" Margin="12,0,0,0" Foreground="#2e3436"/>
                        </StackPanel>
                    </Grid>
                    <Border Height="1" Background="#ebebeb" Margin="0,8,0,8"/>
